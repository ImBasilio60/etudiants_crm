<?xml version="1.0" encoding="UTF-8"?>
<!--code ecrit par BASILIO-->
<odoo>
    <record id="crm_lead_kanban_view_inherit_etudiant" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit.etudiant</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_kanban_record_body']" position="replace">
                <div class="o_kanban_record_body">
                    <div class="o_kanban_record_title">
                        <field name="name"/>
                    </div>
                    <div class="o_kanban_record_subtitle">
                        <field name="numero_etudiant"/>
                    </div>
                    <div>
                        Projet PFE: <field name="projet_pfe"/>
                    </div>
                    <div class="o_kanban_record_subtitle">
                        Tuteur: <field name="tuteur_id"/>
                    </div>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>