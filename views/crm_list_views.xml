<?xml version="1.0" encoding="utf-8"?>
<!--code ecrit par BASILIO-->
<odoo>
    <record id="view_crm_lead_tree_inherit_etudiant" model="ir.ui.view">
        <field name="name">crm.lead.tree.inherit.etudiant</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Ã‰tudiant/Projet</attribute>
                <attribute name="readonly">0</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='contact_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='expected_revenue']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='city']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>

            <xpath expr="//field[@name='name']" position="after">
                <field name="numero_etudiant" optional="show"/>
                <field name="projet_pfe" optional="show"/>
                <field name="tuteur_id" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Encadrant PFE</attribute>
            </xpath>

        </field>
    </record>
</odoo>
