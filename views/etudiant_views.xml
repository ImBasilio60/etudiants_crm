<odoo>
    <record id="view_etudiant_tree" model="ir.ui.view">
        <field name="name">etudiants.etudiant.tree</field>
        <field name="model">etudiants.etudiant</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="numero_etudiant"/>
                <field name="projet_pfe"/>
            </list>
        </field>
    </record>

    <record id="view_etudiant_form" model="ir.ui.view">
        <field name="name">etudiants.etudiant.form</field>
        <field name="model">etudiants.etudiant</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="action_view_stages" type="object" icon="fa-briefcase">
                        <field name="stage_count" widget="statinfo" string="Stages"/>
                    </button>
                </div>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="numero_etudiant"/>
                            <field name="projet_pfe"/>
                        </group>
                        <group>
                            <field name="tuteur_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_etudiants" model="ir.actions.act_window">
        <field name="name">Étudiants</field>
        <field name="res_model">etudiants.etudiant</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvel étudiant
            </p>
        </field>
    </record>
</odoo>